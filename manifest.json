{
  "manifest_version": 2,
  "name": "Fast Forwarder",
  "version": "1.0",
  "description": "Controls the speed of videos on the page",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
